<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LayoutUpdateProfileFragment"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_marginTop="-60dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgInformationUserUpdate"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/img_default" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/roboto_bold"
            android:text="Profile Information"
            android:textColor="@color/teal_700"
            android:textSize="28sp" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/styleEditText"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="Full name"
            android:textSize="20sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtFullNameUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_regular" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:text="Date: "
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tvDateUpdateProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:padding="5dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="yyyy/mm/dd"
                android:textSize="17sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnChooseDateUpdateProfile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/buttom_calender"
                android:paddingStart="10dp" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnUpDateProfile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:background="@drawable/button"
            android:fontFamily="@font/roboto_medium"
            android:text="Update profile"
            android:textColor="@color/white" />

    </LinearLayout>


</LinearLayout>
